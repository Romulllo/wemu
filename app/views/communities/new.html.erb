<div class="row">
  <div class="col-6">
    <div class="cont">
      <div class="left">
        <div class="header">
          <h1 class="animation a1">Create your community!</h1>
          <h3 class="animation a2">Please, take some time to choose an amazing name and also describe what the community is about!</h3>
        </div>
        <div class="form">
          <%= simple_form_for @community do |f| %>
              <div class="form-inputs">
                <%= f.input :name %>
                <%= f.input :description %>
                <%= f.input :photo, as: :file %>
              </div>
                <%= f.button :submit, class: "btn btn-primary button-green" %>
            <% end %>
        </div>
      </div>
    </div>
  </div>
  <div class="col-6 pr-0">
    <div class="right", style = "background-image: url(<%= image_path 'people_music.jpg' %>)" >
    </div>
  </div>
</div>
