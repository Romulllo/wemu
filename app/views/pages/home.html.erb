<div class="banner">
  <div class="banner-content text-center">
    <h1>WeMu</h1>
    <p>Search for communities and friends based on your music taste!</p>
      <%= form_tag results_path, method: 'get' do %>
        <div id= "search-data" class="form-search search-data mb-5" data-communities="<%= @communities.to_json %>">
            <%= text_field_tag :query, nil, autocomplete: :off, class: "form-control search-input", placeholder: "Mastodon, rock,..." %>
            <%= submit_tag "Search", class: "button-pink-search" %>
        </div>
      <% end %>
    <p class='lead'>Or create your own community:</p>

    <p class="lead">
      <%= link_to new_community_path, method: 'get' do %>
        <button type="button" class="button-pink">Create Community</button>
      <% end %>
    </p>
    </div>
  </div>
</div>

