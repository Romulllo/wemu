<div class="banner">
  <div class="banner-content">
    <h1>WeMu</h1>
    <p>Search for communities and friends by music</p>
      <%= form_tag communities_path, method: 'get' do %>
        <div id= "search-data" class="form-search search-data" data-communities="<%= @communities.to_json %>">
            <%= text_field_tag :q, nil, autocomplete: :off, class: "form-control search-input", placeholder: "Mastodon, rock,..." %>
            <%= submit_tag "Search", class: "btn btn-primary button-home" %>
        </div>
      <% end %>
    </div>
  </div>
</div>