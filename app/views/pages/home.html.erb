<div class="banner">
  <div class="banner-content">
    <h1>WeMu</h1>
    <p>Search for communities and friends by music</p>
      <%= form_tag results_path, method: 'get' do %>
        <div id= "search-data" class="form-search search-data mb-5" data-communities="<%= @communities.to_json %>">
            <%= text_field_tag :query, nil, autocomplete: :off, class: "form-control search-input", placeholder: "Mastodon, rock,..." %>
            <%= submit_tag "Search", class: "btn btn-primary button-home" %>
        </div>
      <% end %>
    <p class='lead'>Or... <br>
                    Create your own community.</p>
    <p class="lead">
      <%= link_to new_community_path, method: 'get' do %>
        <button type="button" class="btn btn-lg btn-secondary">Create Community</button>
      <% end %>
    </p>
    </div>
  </div>
</div>
