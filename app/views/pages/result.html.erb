<main role="main">

  <section class="jumbotron text-center">
    <div class="container">
      <h1>Your Search</h1>
      <p class="lead">WeMu brings a collection of communities to you</p>
      <p>
      <%= form_tag results_path, method: 'get' do %>
        <div id= "search-data" class="form-search search-data" data-communities="<%= @communities.to_json %>">
            <%= text_field_tag :query, nil, autocomplete: :off, class: "form-control search-input", placeholder: "Mastodon, rock,..." %>
            <%= submit_tag "Search", class: "btn btn-primary button-home" %>
        </div>
      <% end %>
      </p>
    </div>
  </section>

  <div class="container">

    <div class="row">

      <% @communities.each do |community| %>
        <div class="col-md-4">
          <div class="card mb-4 shadow-sm">
          
            <svg class="bd-placeholder-img card-img-top" width="100%" height="225" xmlns="http://www.w3.org/2000/svg" preserveAspectRatio="xMidYMid slice" focusable="false" role="img" aria-label="Placeholder: Thumbnail"><title>Placeholder</title><rect width="100%" height="100%" fill="#55595c"></rect><text x="50%" y="50%" fill="#eceeef" dy=".3em">Thumbnail</text></svg>
            
            <div class="card-body">
              <h2 class="mb-0"><%= community.name %></h2>
              <p class="card-text"><%= community.description %></p>
              <div class="d-flex justify-content-between align-items-center">
                <div class="btn-group">
                  <%= link_to community_path(community), method: 'get' do %>
                    <button type="button" class="btn btn-sm btn-outline-secondary">View Community</button>
                  <% end %>
                </div>
                <small class="text-muted">5 members</small>
              </div>
            </div>
          </div>
        </div>
      <% end%>
    </div>
  </div>

</main>

